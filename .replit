entrypoint = "app/main.py"

# Keep it simple: install pip deps, then launch FastAPI with uvicorn
run = "pip install -q -r requirements.txt && uvicorn app.main:app --host 0.0.0.0 --port 8000"

# (Optional) point the shell to bash so you can run normal commands
[interpreter]
command = [ "bash", "-lc", "python {file}" ]